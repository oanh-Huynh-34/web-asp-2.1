@using DoAnWebBanGiay.Utility
<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <link rel="icon" href="~/images/favicon.ico">
    <title>Footware</title>

    <!-- Custom fonts for this template-->
    <link href="~/Assets/Admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fontawesome.com/cheatsheet?from=io">

    <!-- Page level plugin CSS-->
    <link href="~/Assets/Admin/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/Assets/Admin/css/sb-admin.css" rel="stylesheet">
    <link href='~/Assets/HomePage/css/jquery-ui.css'
          rel='stylesheet'>
    <link href='~/Assets/HomePage/css/jquery.timepicker.css'
          rel='stylesheet'>
    <script src="~/Assets/HomePage/js/3.1.1/jquery.min.js">
    </script>
    <script src="~/Assets/HomePage/js/jquery.timepicker.js">
    </script>
    <script src="~/Assets/HomePage/js/3.1.1/jquery-ui.min.js">
    </script>
</head>

<body id="page-top">

    <nav class="navbar navbar-expand navbar-dark bg-dark static-top">

        <a class="navbar-brand mr-1" href="@Url.Action("Index", "Shoes")">Footware</a>

        <button class="btn btn-link btn-sm text-white order-1 order-sm-0" id="sidebarToggle" href="#">
            <i class="fas fa-bars"></i>
        </button>

        <!-- Navbar Search -->
        <form class="d-none d-md-inline-block form-inline ml-auto mr-0 mr-md-3 my-2 my-md-0">
            <div class="input-group">
            </div>
        </form>

        <!-- Navbar -->
        <a class="nav-link " asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage" style="color:white">@await Component.InvokeAsync("UserName")</a>
        <ul class="navbar-nav ml-auto ml-md-0">

            <li class="nav-item dropdown no-arrow">
                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-user-circle fa-fw"></i>
                </a>
                <div class="dropdown-menu dropdown-menu-right" aria-labelledby="userDropdown">
                    <div class="dropdown-divider"></div>
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "Customer" })">
                        <button type="submit" class="nav-link btn btn-link text-dark" data-toggle="modal" data-target="#logoutModal">Logout</button>
                    </form>
                </div>
            </li>
        </ul>
    </nav>

    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="sidebar navbar-nav">
            <li class="nav-item">
                <a class="nav-link" asp-area="Customer" asp-controller="Home" asp-action="Index">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Home</span>
                </a>
            </li>
            @if (User.IsInRole(SD.SuperAdminEndUser))
            {
                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" id="pagesDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="fas fa-fw fa-folder"></i>
                        <span>Quản lý giày</span>
                    </a>

                    <div class="dropdown-menu" aria-labelledby="pagesDropdown">
                        <a class="dropdown-item" asp-area="Admin" asp-controller="ShoeTypes" asp-action="Index"><i class="fas fa-project-diagram"></i> Loại giày</a>
                        <hr>
                        <a class="dropdown-item" asp-area="Admin" asp-controller="Brands" asp-action="Index"><i class="fas fa-tags"></i> Hiệu giày</a>
                        <hr>
                        <a class="dropdown-item" asp-area="Admin" asp-controller="Providers" asp-action="Index"><i class="fas fa-truck"></i> Nhà cung cấp</a>
                        <hr>
                        <a class="dropdown-item" asp-area="Admin" asp-controller="Shoes" asp-action="Index"><i class="fas fa-shoe-prints"></i> Giày</a>

                    </div>

                </li>
                <li class="nav-item"><a class="nav-link" asp-area="Identity" asp-page="/Account/Register"><i class="fas fa-registered"></i> Register</a></li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="Admin" asp-controller="AdminUsers" asp-action="Index"><i class="fas fa-user"></i><span> Nhân viên</span></a>
                </li>
            }

            <li class="nav-item active">
                <a class="nav-link" asp-area="Admin" asp-controller="Order" asp-action="Index"><i class="fas fa-clipboard-list"></i><span> Đơn đặt hàng</span> </a>
            </li>
        </ul>
        <div id="content-wrapper">

            @RenderBody()

        </div>
        <!-- /.content-wrapper -->

    </div>
    <!-- /#wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>
    <!-- Bootstrap core JavaScript-->
    <script src="~/Assets/Admin/vendor/jquery/jquery.min.js"></script>
    <script src="~/Assets/Admin/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Assets/Admin/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Page level plugin JavaScript-->
    <script src="~/Assets/Admin/vendor/chart.js/Chart.min.js"></script>
    <script src="~/Assets/Admin/vendor/datatables/jquery.dataTables.js"></script>
    <script src="~/Assets/Admin/vendor/datatables/dataTables.bootstrap4.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Assets/Admin/js/sb-admin.min.js"></script>

    <!-- Demo scripts for this page-->
    <script src="~/Assets/Admin/js/demo/datatables-demo.js"></script>
    <script src="~/Assets/Admin/js/demo/chart-area-demo.js"></script>
    <!--  jQuery -->
    <script type="text/javascript" src="~/Assets/Admin/js/jquery-1.11.3.min.js"></script>
    <!-- Bootstrap Date-Picker Plugin -->
    <script type="text/javascript" src="~/Assets/Admin/js/demo/bootstrap-datepicker.min.js"></script>
    <link rel="stylesheet" href="~/Assets/Admin/css/bootstrap-datepicker3.css" />
    @RenderSection("Scripts", required: false)
</body>

</html>

