@using Microsoft.AspNetCore.Http
@using DoAnWebBanGiay.Extensions
@using DoAnWebBanGiay.Utility

@inject IHttpContextAccessor HttpContextAccessor


<!DOCTYPE HTML>
<html>
<head>
    <title>Footwear - Best Shoes Seller</title>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="~/Assets/HomePage/css/fontFamilyMontserrat.css" rel="stylesheet">
    <link href="~/Assets/HomePage/css/fontFamilyRokkitt.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="icon" href="~/images/favicon.ico">
    <!-- Animate.css -->
    <link href="~/Assets/Admin/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="~/Assets/HomePage/css/animate.css">
    <!-- Icomoon Icon Fonts-->
    <link rel="stylesheet" href="~/Assets/HomePage/css/icomoon.css">
    <!-- Ion Icon Fonts-->
    <link rel="stylesheet" href="~/Assets/HomePage/css/ionicons.min.css">
    <!-- Bootstrap  -->
    <link rel="stylesheet" href="~/Assets/HomePage/css/bootstrap.min.css">

    <!-- Magnific Popup -->
    <link rel="stylesheet" href="~/Assets/HomePage/css/magnific-popup.css">

    <!-- Flexslider  -->
    <link rel="stylesheet" href="~/Assets/HomePage/css/flexslider.css">

    <!-- Owl Carousel -->
    <link rel="stylesheet" href="~/Assets/HomePage/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Assets/HomePage/css/owl.theme.default.min.css">

    <!-- Date Picker -->
    <link rel="stylesheet" href="~/Assets/HomePage/css/bootstrap-datepicker.css">
    <!-- Flaticons  -->
    <link rel="stylesheet" href="~/Assets/HomePage/fonts/flaticon/font/flaticon.css">

    <!-- Theme style  -->
    <link rel="stylesheet" href="~/Assets/HomePage/css/style.css">
    <link href='~/Assets/HomePage/css/jquery-ui.css'
          rel='stylesheet'>
    <link href='~/Assets/HomePage/css/jquery.timepicker.css'
          rel='stylesheet'>
    <script src="~/Assets/HomePage/js/3.1.1/jquery.min.js">
    </script>
    <script src="~/Assets/HomePage/js/jquery.timepicker.js">
    </script>
    <script src="~/Assets/HomePage/js/3.1.1/jquery-ui.min.js">
    </script>
</head>
<body>

    <div class="colorlib-loader"></div>

    <div id="page">
        <nav class="colorlib-nav" role="navigation">
            <div class="top-menu">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-7 col-md-9">
                            <div id="colorlib-logo"><a asp-area="Customer" asp-controller="Home" asp-action="Index">Footwear</a></div>
                        </div>
                        <div class="col-sm-5 col-md-3">
                            <partial name="_LoginPartial" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-12 text-left menu-1">
                            <ul>
                                <li class="active"><a asp-area="Customer" asp-controller="Home" asp-action="Index">Footwear</a></li>
                                @if (HttpContextAccessor.HttpContext.Session.Get<List<int>>("ssShoppingCart") != null)
                                {
                                    <li class="cart">
                                        <a asp-area="Customer" asp-controller="ShoppingCart" asp-action="Index">
                                            <i class="icon-shopping-cart"></i> &nbsp;
                                            @{
                                                var count = HttpContextAccessor.HttpContext.Session.Get<List<int>>("ssShoppingCart").Count;
                                            }
                                            (@count)
                                        </a>
                                    </li>

                                }
                                else
                                {
                                    <li class="cart">
                                        <a asp-area="Customer" asp-controller="ShoppingCart" asp-action="Index">
                                            <i class="icon-shopping-cart"></i> &nbsp;(0)
                                        </a>
                                    </li>
                                }

                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="sale">
                <div class="container">
                    <div class="row">
                        <div class="col-sm-8 offset-sm-2 text-center">
                            <div class="row">
                                <div class="owl-carousel2">
                                    <div class="item">
                                        <div class="col">
                                            <h3><a href="#">25% off (Almost) Everything! Use Code: Summer Sale</a></h3>
                                        </div>
                                    </div>
                                    <div class="item">
                                        <div class="col">
                                            <h3><a href="#">Our biggest sale yet 50% off all summer shoes</a></h3>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
        <div class="col-10" style="margin:auto">
            @RenderBody()
        </div>
    </div>

    <div class="colorlib-partner">
        <div class="container">
            <div class="row">
                <div class="col-sm-8 offset-sm-2 text-center colorlib-heading colorlib-heading-sm">
                    <h2>Trusted Partners</h2>
                </div>
            </div>
            <div class="row">
                <div class="col partner-col text-center">
                    <img src="~/Assets/HomePage/images/brand-1.jpg" class="img-fluid" alt="Free html4 bootstrap 4 template">
                </div>
                <div class="col partner-col text-center">
                    <img src="~/Assets/HomePage/images/brand-2.jpg" class="img-fluid" alt="Free html4 bootstrap 4 template">
                </div>
                <div class="col partner-col text-center">
                    <img src="~/Assets/HomePage/images/brand-3.jpg" class="img-fluid" alt="Free html4 bootstrap 4 template">
                </div>
                <div class="col partner-col text-center">
                    <img src="~/Assets/HomePage/images/brand-4.jpg" class="img-fluid" alt="Free html4 bootstrap 4 template">
                </div>
                <div class="col partner-col text-center">
                    <img src="~/Assets/HomePage/images/brand-5.jpg" class="img-fluid" alt="Free html4 bootstrap 4 template">
                </div>
            </div>
        </div>
    </div>

    @RenderSection("Scripts", required: false)
    <div class="gototop js-top">
        <a href="#" class="js-gotop"><i class="ion-ios-arrow-up"></i></a>
    </div>

    <!-- jQuery -->
    <script src="~/Assets/HomePage/js/jquery.min.js"></script>
    <!-- popper -->
    <script src="~/Assets/HomePage/js/popper.min.js"></script>
    <!-- bootstrap 4.1 -->
    <script src="~/Assets/HomePage/js/bootstrap.min.js"></script>
    <!-- jQuery easing -->
    <script src="~/Assets/HomePage/js/jquery.easing.1.3.js"></script>
    <!-- Waypoints -->
    <script src="~/Assets/HomePage/js/jquery.waypoints.min.js"></script>
    <!-- Flexslider -->
    <script src="~/Assets/HomePage/js/jquery.flexslider-min.js"></script>
    <!-- Owl carousel -->
    <script src="~/Assets/HomePage/js/owl.carousel.min.js"></script>
    <!-- Magnific Popup -->
    <script src="~/Assets/HomePage/js/jquery.magnific-popup.min.js"></script>
    <script src="~/Assets/HomePage/js/magnific-popup-options.js"></script>
    <!-- Date Picker -->
    <script src="~/Assets/HomePage/js/bootstrap-datepicker.js"></script>
    <!-- Stellar Parallax -->
    <script src="~/Assets/HomePage/js/jquery.stellar.min.js"></script>
    <!-- Main -->
    <script src="~/Assets/HomePage/js/main.js"></script>
</body>
</html>

