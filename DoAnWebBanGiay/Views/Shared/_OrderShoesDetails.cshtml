@model List<DoAnWebBanGiay.Models.Shoes>
@*
    For more information on enabling MVC for empty projects, visit http://go.microsoft.com/fwlink/?LinkID=397860
*@
@if (Model != null)
{
<table class="table table-striped" width="100%">
    <tr class="table-info">
        <th style="text-align:center; width:20%"></th>
        <th style="text-align:center;">
            <label asp-for="@Model.FirstOrDefault().Name"></label>
        </th>
        <th style="text-align:center;">
            <label asp-for="@Model.FirstOrDefault().Price"></label>
        </th>
        <th style="text-align:center;">
            <label asp-for="@Model.FirstOrDefault().Color"></label>
        </th>
        <th style="text-align:center;">
            <label asp-for="@Model.FirstOrDefault().Size"></label>
        </th>
        <th style="text-align:center;">
            <label asp-for="@Model.FirstOrDefault().Brands.Name"></label>
        </th>
        <th style="text-align:center;">
            <label asp-for="@Model.FirstOrDefault().ShoeTypes.Name"></label>
        </th>
        <th style="text-align:center;"></th>
    </tr>
    @foreach (var item in Model)
    {
    <tr style="padding:50px;">
        <td>
            <a asp-area="Customer" asp-controller="Home" asp-action="Details" asp-route-id="@item.Id">
                <img src="@item.Image" width="100%" style="margin:auto; display:block; border-radius:5px; border:1px solid #bbb9b9;" />
            </a>
        </td>
        <td style="text-align:center">
            @Html.DisplayFor(c => item.Name)
        </td>
        <td style="text-align:center">
            @Html.DisplayFor(c => item.Price)
        </td>
        <td style="text-align:center">
            @Html.DisplayFor(c => item.Color)
        </td>
        <td style="text-align:center">
            @Html.DisplayFor(c => item.Size)
        </td>
        <td style="text-align:center">
            @Html.DisplayFor(c => item.Brands.Name)
        </td>
        <td style="text-align:center">
            @Html.DisplayFor(c => item.ShoeTypes.Name)
        </td>
        <td style="text-align:center"></td>
    </tr>

    }
</table>}
else
{
  <div>
      There is no item in the shoppong cart
</div>
}