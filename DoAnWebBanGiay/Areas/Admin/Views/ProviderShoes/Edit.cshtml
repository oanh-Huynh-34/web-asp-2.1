@model DoAnWebBanGiay.Models.ViewModel.ProviderShoesModel
@using DoAnWebBanGiay.Extensions
@{
    ViewData["Title"] = "Create";
}
<br />
<h2 class="text-info">Create New Shoe</h2>
<form method="post"  asp-antiforgery="true" enctype="multipart/form-data">
    <div class="p-4 border rounded">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="shoes"></label>
            </div>
            <div class="col-5">
                <select asp-for="@Model.providerShoes.ShoesID" asp-items="Model.shoes.ToSelectListItem(Model.providerShoes.ShoesID)" class="form-control"></select>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="providers"></label>
            </div>
            <div class="col-5">
                <select asp-for="@Model.providerShoes.ProviderID" asp-items="Model.providers.ToSelectListItem(Model.providerShoes.ProviderID)" class="form-control"></select>
            </div>
        </div>
        <br />
        <div class="form-group">
            <input type="submit" class="btn btn-primary" value="Update" />
            <a asp-action="Index" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>
@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}