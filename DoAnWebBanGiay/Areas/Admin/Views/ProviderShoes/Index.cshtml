@model IEnumerable<DoAnWebBanGiay.Models.ProviderShoes>
@{
    ViewData["Title"] = "Index";
}
<br /><br />
<div class="row">
    <div class="col-6">
        <h2 class="text-info"> Provider Shoes List</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-action="Create" class="btn btn-info"><i class="fas fa-plus"></i>&nbsp; New Provider Shoes</a>
    </div>
</div>
<br />
<div>
    <table class="table table-striped border">
        <tr class="table-info">
            <th>
                @Html.DisplayNameFor(m => m.Provider)
            </th>
            <th>
                @Html.DisplayNameFor(m => m.Shoes)
            </th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(m => item.Provider.Name)
            </td>
            <td>
                @Html.DisplayFor(m => item.Shoes.Name)
            </td>
            <td style="width:150px">
                <div class="btn-group" role="group">
                    <a type="button" class="btn btn-success" href="@Url.Action("Details",new { ProviderID = item.ProviderID,ShoesID=item.ShoesID})">
                        <i class="far fa-list-alt"></i>
                    </a>
                    <a type="button" class="btn btn-danger" href="@Url.Action("Delete",new { ProviderID = item.ProviderID,ShoesID=item.ShoesID})">
                        <i class="fas fa-trash-alt"></i>
                    </a>
                </div>
            </td>
        </tr>
        }
    </table>
</div>



