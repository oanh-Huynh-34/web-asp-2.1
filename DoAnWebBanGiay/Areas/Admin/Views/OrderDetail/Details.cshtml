@model DoAnWebBanGiay.Models.OrderDetail

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>
<h4>OrderDetail</h4>
<hr />
<form method="post" asp-action="Edit"  asp-antiforgery="true">
    <div class="p-4 border rounded">
        <input type="hidden" asp-for="Id" />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Order"></label>
            </div>
            <div class="col-5">
                <input asp-for="OrderId" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Shoes"></label>
            </div>
            <div class="col-5">
                <input asp-for="ShoesID" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ArriveDate"></label>
            </div>
            <div class="col-5">
                @{string date = ""; }
                @if (Model.ArriveDate.Year.ToString() !="1" )
                {
                    {
                        date = Model.ArriveDate.Month.ToString() + "/" + Model.ArriveDate.Day.ToString() + "/" + Model.ArriveDate.Year.ToString();
                    }
                }
                @date
            </div>
        </div>
        <br />
        <div class="form-group">
            <a asp-action="Edit" class="btn btn-primary" asp-route-OrderId="@Model.OrderId" asp-route-ShoesId="@Model.ShoesID"> Edit</a>
            <a href="@Url.Action("Edit","Order",new { id = Model.OrderId })" class="btn btn-success">Back to List</a>
        </div>
    </div>
</form>
